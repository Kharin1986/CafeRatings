<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/SettingsTitle">

<!--        <CheckBoxPreference-->
<!--            app:key="checkbox"-->
<!--            app:title="@string/title_checkbox_preference"-->
<!--            app:summary="@string/summary_checkbox_preference"/>-->

<!--        <SwitchPreferenceCompat-->
<!--            app:key="switch"-->
<!--            app:title="@string/title_switch_preference"-->
<!--            app:summary="@string/summary_switch_preference"/>-->

        <DropDownPreference
            app:key="@string/COUNTRY_KEY"
            app:title="@string/SettingsCountryTitle"
            app:useSimpleSummaryProvider="true"
            app:entries="@array/country_titles"
            app:entryValues="@array/country_values"
            app:defaultValue="@string/SettingsDefaultCountry"/>

        <DropDownPreference
            app:key="@string/CITY_KEY"
            app:title="@string/SettingsCityTitle"
            app:useSimpleSummaryProvider="true"
            app:entries="@array/city_titles"
            app:entryValues="@array/city_values"
            app:defaultValue="@string/SettingsDefaultCity"/>

        <SwitchPreferenceCompat
            app:key="@string/DISTANCEFILTER_KEY"
            app:title="@string/SettingsDistanceFilterTitle"
            app:summary="@string/SettingsDistanceFilterSummary"
            app:defaultValue="false"/>
        <SeekBarPreference
            app:key="@string/DISTANCE_KEY"
            app:dependency="DistanceFilter"
            app:title="@string/SettingsDistanceTitle"
            app:summary="@string/SettingsDistanceSummary"
            app:min="1"
            app:seekBarIncrement="1"
            app:adjustable="true"
            app:defaultValue="@string/SettingsDefaultDistance"/>
    </PreferenceCategory>

</PreferenceScreen>