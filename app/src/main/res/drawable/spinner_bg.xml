<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#898d90"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="12dp" android:height="14dp"  android:gravity="center" android:bottom="10dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#565c60" />
                        <stroke android:color="#565c60" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="20dp" android:height="16dp" android:bottom="26dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#898d90"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>