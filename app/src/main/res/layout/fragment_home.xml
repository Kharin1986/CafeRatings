<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@color/colorBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/colorBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cv_corner_radius"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/iw_rest"
                android:onClick="onRestClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/restaurant"
                app:srcCompat="@drawable/card_rest">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cv_corner_radius"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/iw_bar"
                android:onClick="onBarClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/Bar"
                app:srcCompat="@drawable/card_bar">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cv_corner_radius"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/iw_fav"
                android:onClick="onFavClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/FAV"
                app:srcCompat="@drawable/card_fav">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/colorBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/iw_top"
                android:onClick="onTopClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/TOP"
                app:srcCompat="@drawable/card_top">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cv_corner_radius"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/iw_cafe"
                android:onClick="onCafeClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/Cafe"
                app:srcCompat="@drawable/card_cafe">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cv_corner_radius"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/card_elevation">
            <ImageView
                android:id="@+id/iw_fastfood"
                android:onClick="onFastClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/fastfood"
                app:srcCompat="@drawable/card_fastfood">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>